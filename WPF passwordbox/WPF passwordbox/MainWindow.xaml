<Window x:Class="WPF_passwordbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_passwordbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="144,50,144,50">
        <StackPanel Margin="10px">
            <Label>Username:</Label>
            <TextBox Name="tbUsername"/>
            <Label>Password:</Label>
            <PasswordBox Name="passbox" MaxLength="32" PasswordChar="*"/>
            <Button Margin="5" Content="Login" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
